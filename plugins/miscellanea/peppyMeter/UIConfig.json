{
	"page": {
		"label": "Configuration"
	},
	"sections": [
		{
			"id": "section_account",
			"element": "section",
			"label": "TRANSLATE.LOCALSETTINGS",
			"icon": "fa-desktop",
			"onSave": {
				"type": "controller",
				"endpoint": "miscellanea/peppyMeter",
				"method": "savepeppy"
			},
			"saveButton": {
				"label": "TRANSLATE.APPLY",
				"data": [
					"localdisplay",
					"meter",
					"screensize"
				]
			},
			"content": [
				{
					"id": "localdisplay",
					"element": "switch",
					"doc": "If enabled, local display is used",
					"label": "Local Display",
					"value": true
				  },
				{
					"id": "meter",
					"element": "select",
					"doc": "TRANSLATE.DOCMETER",
					"label": "TRANSLATE.METER",
					"value": {
						"value": "random",
						"label": "random"
					},
					"options": [
						{
							"value": "random",
							"label": "random"
						},
